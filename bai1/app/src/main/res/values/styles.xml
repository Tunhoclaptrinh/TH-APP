<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base style -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- Nút số -->
    <style name="CalcButton.Dark" parent="CalcButton">
        <item name="android:background">@drawable/btn_dark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Nút chức năng (C, ±, %) -->
    <style name="CalcButton.Gray" parent="CalcButton">
        <item name="android:background">@drawable/btn_gray</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Nút phép toán -->
    <style name="CalcButton.Orange" parent="CalcButton">
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>